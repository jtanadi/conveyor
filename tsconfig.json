{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES6",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
